<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_smoke">

        <android.support.v7.widget.Toolbar
            android:id="@+id/vToolbar"
            android:title=" "
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways" />

        <android.support.design.widget.TabLayout
            android:id="@+id/vTablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:tabGravity="fill"
            app:tabMode="scrollable" >

            <android.support.design.widget.TabItem
                android:tag="tiHero"
                android:id="@+id/tiHero"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Герой" />

            <android.support.design.widget.TabItem
                android:tag="tabEnterBarcode"
                android:id="@+id/tiStats"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Stats"/>

            <android.support.design.widget.TabItem
                android:tag="tiSkill"
                android:id="@+id/tiSkill"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Skill"/>

            <android.support.design.widget.TabItem
                android:tag="tiAdvDis"
                android:id="@+id/tiAdvDis"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Adv/Dis"/>

            <android.support.design.widget.TabItem
                android:tag="tiitems"
                android:id="@+id/tiitems"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="items"/>


            <android.support.design.widget.TabItem
                android:tag="tinotes"
                android:id="@+id/tinotes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="notes"/>

        </android.support.design.widget.TabLayout>
    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/BarcodeFragmentPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>